// Users Schema
// This file contains the database models for the user system

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  roles         UserRole[]
  auditLogs     AuditLog[]
  assignedRoles UserRole[] @relation("AssignedBy")

  @@map("users")
} 